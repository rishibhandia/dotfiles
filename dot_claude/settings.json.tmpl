{
  "defaultMode": "plan",
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
{{- if eq .chezmoi.os "darwin" }}
  "mcpServers": {
    "things3": {
      "command": "{{ .chezmoi.homeDir }}/.cargo/bin/things3",
      "args": ["-d", "{{ .chezmoi.homeDir }}/Library/Group Containers/JLMPQHK86H.com.culturedcode.ThingsMac/ThingsData-FPAM5/Things Database.thingsdatabase/main.sqlite", "mcp"]
    }
  },
{{- end }}
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(git:*)",
      "Bash(tree:*)",
      "Bash(find:*)"
    ],
    "deny": [
      "Bash(shutdown)",
      "Bash(reboot)",
      "Bash(halt)",
      "Bash(poweroff)",
      "Bash(mkfs)",
      "Bash(dd)",
      "Bash(fdisk)",
      "Bash(parted)",
      "Bash(sudo)",
      "Bash(doas)",
      "Bash(su)"
    ],
    "ask": [
      "Bash(rm)",
      "Bash(chmod)",
      "Bash(chown)",
      "Bash(kill)",
      "Bash(git reset --hard)",
      "Bash(git push --force)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  }
}
