# -*-mode:conf-toml-*- vim:ft=toml
# ~/.local/share/chezmoi/.chezmoi.toml.tmpl
# =============================================================================
# Used to customize configuration when doing a `chezmoi init`.
#
# This template file will trigger prompts to fill-in machine-specific
# templateable values. The resulting file is then created at
# `~/.config/chezmoi/chezmoi.toml`
# See https://www.chezmoi.io/docs/how-to/
#
{{/* boolean feature tags */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $work := false -}}{{/* true if this machine is a work machine */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- "" -}}
{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}
{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}
{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "Rishi's Macbook Pro 2019" -}}
{{-     $hostname = "rishi-mbp-2019" -}}
{{-   else if eq $computerName "Rishi's Mac Mini 2020" -}}
{{-     $hostname = "rishi-macmini-2020" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}
{{- if eq .chezmoi.os "windows" -}}
{{-   $work = true -}}
{{- end -}}
{{- if not $ephemeral -}}
{{-   if eq $hostname "rishi-macmini-2020" -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "rishi-mbp-2019" -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "ubuntu" -}}
{{-     $headless = true -}}
{{-     $personal = true -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}
{{- $email := "rishi@bhandia.com" -}}
{{- if $work -}}
{{-   $email = "rb3926@nyu.edu" -}}
{{- end -}}
{{- $name := "Rishi Bhandia" -}}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}
    ephemeral = {{ $ephemeral }}
    work = {{ $work }}
    headless = {{ $headless }}
    hostname = {{ $hostname | quote }}
    personal = {{ $personal }}
    osid = {{ $osID | quote }}

[github]
    refreshPeriod = "12h"
    
[git]
    autoAdd = true
    autoCommit = false
    
[onepassword]
    command = "op"
    prompt = false  # Won't prompt for authentication if already signed in

[onepassword.template]
    # This will allow chezmoi to automatically sign in to 1password
    # Optional: specify account and vault if you have multiple
    # account = "my-account"
    # vault = "my-vault"
